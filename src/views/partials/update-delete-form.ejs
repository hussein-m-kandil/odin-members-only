<form class="d-inline-flex flex-wrap gap-2">
  <% if (locals.updateUrl) { %>
  <button
    formaction="<%= updateUrl %>"
    formmethod="get"
    type="submit"
    class="btn btn-sm btn-outline-secondary"
  >
    Update
  </button>
  <% } %> <% if (locals.deleteUrl) { %>
  <button
    formaction="<%= deleteUrl %>"
    formmethod="post"
    onclick="return confirm('Do you want to delete <%= itemName %>?')"
    type="submit"
    class="btn btn-sm btn-outline-danger"
  >
    Delete
  </button>
  <%} %>
</form>
